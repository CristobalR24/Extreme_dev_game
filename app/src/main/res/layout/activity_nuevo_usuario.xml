<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Regresar"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/boton3"
                android:fontFamily="@font/cabin"
                android:onClick="SalirNuevoUser" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="560dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/subpantalla3"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bungeeinline"
                android:text="Nuevo usuario"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/subpantalla1"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/cabin"
                    android:text="Nombre completo"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordes"
                    android:fontFamily="@font/cabin"
                    android:hint="nombre apellido"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingHorizontal="10sp"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/cabin"
                    android:text="Cédula"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Cedula"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordes"
                    android:fontFamily="@font/cabin"
                    android:hint="0-000-0000"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingHorizontal="10sp"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/cabin"
                    android:text="Correo Electronico"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/CorreoUsuario"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordes"
                    android:fontFamily="@font/cabin"
                    android:hint="correo@utp.ac.pa"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingHorizontal="10sp"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/cabin"
                    android:text="Contraseña"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/ContraUsuario"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordes"
                    android:fontFamily="@font/cabin"
                    android:hint="******"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingHorizontal="10sp"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:text="Facultad"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="16dp" />

                        <Spinner
                            android:layout_gravity="center"
                            android:background="@drawable/bordes"
                            android:id="@+id/CodigoGrupo"
                            android:paddingHorizontal="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:text="Edad"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="16dp" />

                        <Spinner
                            android:id="@+id/Year"
                            android:background="@drawable/bordes"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:paddingHorizontal="15dp"
                            android:layout_height="25dp" />
                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/registrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton"
                    android:fontFamily="@font/cabin"
                    android:onClick="Registrar"
                    android:padding="15dp"
                    android:text="Registrarme"
                    android:textColor="#ffffff" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>