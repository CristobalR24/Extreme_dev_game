<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    tools:context=".SeleccionNivelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Regresar"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/boton3"
                android:fontFamily="@font/cabin"
                android:onClick="RegresarMenu" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="-250dp"
            android:background="#283643"
            android:orientation="vertical">

            <Button
                android:textColor="@color/black"
                android:id="@+id/lvlbasic"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nivel BÃ¡sico"
                android:onClick="IraBasico"
                android:layout_gravity="center"
                android:background="@drawable/boton2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin"
                />
            <Button
                android:id="@+id/lvlinter"
                android:textColor="@color/black"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nivel Intermedio"

                android:layout_gravity="center"
                android:background="@drawable/boton2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin"
                />
            <Button
                android:id="@+id/lvlavan"
                android:textColor="@color/black"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nivel Avanzado"

                android:layout_gravity="center"
                android:background="@drawable/boton2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>