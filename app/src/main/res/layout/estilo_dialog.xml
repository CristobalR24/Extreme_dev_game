<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/subpantalla3"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="¡Respuesta incorrecta!"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/retroalimentacion"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cabin"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no hay retroalimentacion para mostrar"/>
        <TextView
            android:id="@+id/animo"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cabin"
            android:textColor="@color/verde_verdadero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="¡Animo tu puedes hacerlo!"/>
        <Button
            android:id="@+id/retro_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/boton"/>

    </LinearLayout>

</LinearLayout>