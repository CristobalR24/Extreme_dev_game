<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    tools:context=".EliminarPreguntaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <Button
                android:id="@+id/salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Regresar"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/boton3"
                android:fontFamily="@font/cabin"
                 />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:fontFamily="@font/bungeeinline"
            android:text="Eliminar pregunta"
            android:textAlignment="center"
            android:textColor="#fc7121"
            android:background="#283643"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-250dp"
            android:background="#283643"
            android:orientation="vertical">

            <Button
                android:id="@+id/lvlbasic"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nivel BÃ¡sico"

                android:layout_gravity="center"
                android:background="@drawable/boton2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin"
                />
            <Button
                android:id="@+id/lvlinter"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nivel Intermedio"

                android:layout_gravity="center"
                android:background="@drawable/boton2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin"
                />
            <Button
                android:id="@+id/lvlavan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nivel Avanzado"

                android:layout_gravity="center"
                android:background="@drawable/boton2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin"
                />

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>