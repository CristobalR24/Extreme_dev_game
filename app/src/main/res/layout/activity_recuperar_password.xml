<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Regresar"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/boton3"
                android:fontFamily="@font/cabin"
                android:onClick="Salir" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/subpantalla3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bungeeinline"
                android:text="Olvido de contraseÃ±a"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/subpantalla1"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/cabin"
                    android:text="Ingrese su correo electronico"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/txtemail"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordes"
                    android:fontFamily="@font/cabin"
                    android:hint="wencers.castillo@utp.ac.pa"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingHorizontal="10sp"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/registrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton"
                    android:fontFamily="@font/cabin"
                    android:padding="15dp"
                    android:text="Aceptar"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>