<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    tools:context=".AyudaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Regresar"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/boton3"
                android:fontFamily="@font/cabin"
                android:onClick="RegresarMenu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="-250dp"
            android:background="#283643"
            android:orientation="vertical">

            <Button
                android:id="@+id/CentroAyuda"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Centro de ayuda"
                android:onClick="IraCentroAyuda"
                android:layout_gravity="center"
                android:background="@drawable/boton4"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/cabin"
                android:drawableLeft="@mipmap/ayuda2"
                />
            <Button
                android:id="@+id/Contactanos"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="ContÃ¡ctanos"
                android:drawableLeft="@mipmap/contactenos"
                android:layout_gravity="center"
                android:background="@drawable/boton4"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin"
                android:onClick="IraContacto" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>